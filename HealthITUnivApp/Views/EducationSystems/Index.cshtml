            <td>
                @Html.DisplayFor(modelItem => item.SystemAbbreviation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SystemURL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SystemStreet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SystemCity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SystemState)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SystemCountry)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SystemZipCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SystemPhoneNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SystemHeadPerson)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.SystemId }) |
                @Html.ActionLink("Details", "Details", new { id=item.SystemId }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.SystemId })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
