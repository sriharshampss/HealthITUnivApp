@model IEnumerable<HealthITUnivApp.EducationSystem>

@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SystemName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SystemAbbreviation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SystemURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SystemStreet)
